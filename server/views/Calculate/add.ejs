<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="courseTextField">Course</label>
                    <input type="text" class="form-control" id="courseTextField" placeholder="Enter the Course" name="Course" value="<%= Calculator.Course %>" required>
                </div>
                <div class="form-group">
                    <label for="coursecodeTextField">Course Code</label>
                    <input type="text" class="form-control" id="coursecodeTextField" placeholder="Enter the Course Code" name="CourseCode" required>
                </div>
                <div class="form-group">
                    <label for="professorTextField">Professor</label>
                    <input type="text" class="form-control" id="professorTextField" placeholder="Enter the Professor's name" name="Professor" required>
                </div>
                <div class="form-group">
                    <label for="marksgTextField">Marks Gained</label>
                    <input type="text" class="form-control" id="averageTextField" placeholder="Marks Gained" name="MarksG" required>
                </div>
                <div class="form-group">
                    <label for="markstTextField">Total Marks</label>
                    <input type="text" class="form-control" id="markstTextField" placeholder="Total Marks" name="MarksT" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>